# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX=100           # Maximum requests per window

# MongoDB Configuration
MONGO_URL=mongodb://localhost:27017
DATABASE_NAME=chainlink_nft_defi

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_ERROR=error.log
LOG_FILE_COMBINED=combined.log

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Security Configuration
BCRYPT_ROUNDS=10

# Mock Data Configuration
MOCK_SUCCESS_RATE_VERIFICATION=0.9    # 90% success rate for verifications
MOCK_SUCCESS_RATE_AUTHENTICITY=0.98   # 98% success rate for authenticity
MOCK_APPRAISAL_BASE_VALUE=100000      # Base value for mock appraisals
MOCK_PRICE_VARIATION=0.02             # Â±2% price variation for market data 